<div class="container">

<% if !notice.nil? %>
  <p id="notice" class="alert alert-success"><%= notice %></p>
<% end %>
<h1 style="float:left">Listing Countries</h1>
<p id="new"><%= link_to 'New Country', new_country_path, class: "btn btn-success" %></p>

<table class="table table-striped">
  <col width="33%">
  <col width="33%">
  <col width="33%">

  <thead>
    <tr>
      <th>Name</th>
      <th>Flag</th>
      <th colspan="3">CRUD</th>
    </tr>
  </thead>

  <tbody>
    <% @countries.each do |country| %>
      <tr>
        <td><a href="<%= country_path country.id%>"><%= country.name %></a></td>
        <td class="zoom-gallery">

        <!--<% img = '/uploads/default.jpg' %>
        <% if !country.flag.file.nil? %>
        <%    img = country.flag %>
        <% elsif country.url %>
        <%    img = country.url %>
        <% end %>
        -->


        <% img = '/uploads/default.jpg' %>
        <% if !country.url.nil? %>
        <%    img = country.url %>
        <% end %>
        
        <a href="<%= img %>">

        <img src="<%= img %>" width="100" height="50" crop="fill" class: "zoom-gallery" />
        <!--<%= image_tag img,:type => :upload, :width => 100, :height => 50, :crop => :fill, class: "zoom-gallery" %>-->
        </td>
        </a>
        <td>
        <%= link_to 'Edit', edit_country_path(country), class: "btn btn-success crud" %>
        <%= link_to 'Destroy', country,class: "btn btn btn-danger crud" , method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="digg_pagination text-center">
    <!-- <div class="page_info">
      <%= page_entries_info @countries %>
    </div> -->
    <%= will_paginate @countries, :container => false %>
  </div>
</div>
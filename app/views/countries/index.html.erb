<p id="notice"><%= notice %></p>

<h1>Listing Countries</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Flag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @countries.each do |country| %>
      <tr>
        <td><a href="<%= country_path country.id%>"><%= country.name %></a></td>

        <td>
        <%= image_tag country.flag,:type => :upload, :width => 150, :height => 100, :crop => :fill, class: "zoom-gallery" %></td>
        <td><%= link_to 'Show', country %></a></td>
        <td><%= link_to 'Edit', edit_country_path(country) %></td>
        <td><%= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @countries %>
    </div>
    <%= will_paginate @countries, :container => false %>
  </div>

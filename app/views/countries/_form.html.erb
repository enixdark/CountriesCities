

<%= form_for @country, html: { multipart: true } do |f| %>
  <% if @country.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@country.errors.count, "error") %> prohibited this country from being saved:</h2>

      <ul>
      <% @country.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="row">
        <div class="col-lg-6 col-sm-6 col-12">
            <h4>Input Groups</h4>
            <div class="input-group">
                <span class="input-group-btn">
                    <span class="btn btn-primary btn-file">
                        Browse <%= f.label :flag %><%= f.file_field :flag, class: "btn" %>

                    </span>
                </span>
                <input type="text" class="form-control">
            </div>
        </div>
  </div>

  <div class="actions">
    <%= f.submit 'Save',  class: "btn btn-primary"%>
  </div>
<% end %>